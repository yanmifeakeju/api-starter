{
  "name": "fastify-rest-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "pretest-script": "tsx tests/scripts/pre-test.ts",
    "pretest": "env-cmd -f src/config/test.env.json --use-shell \"pnpm run pretest-script && pnpm run db:migrate\"",
    "test": "vitest run",
    "posttest": "tsx tests/scripts/post-test.ts",
    "db:schema": "npx @databases/pg-schema-cli --directory src/databases/postgres/schema",
    "db:migrate": "npx pg-migrations apply --directory src/databases/postgres/migrations && pnpm run db:schema",
    "start:api": "env-cmd -f dist/config/$NODE_ENV.env.json --use-shell \"pnpm db:migrate && node ./dist/apps/api/start.js\"",
    "start:api:dev": "NODE_ENV=development && env-cmd -f src/config/$NODE_ENV.env.json --use-shell \"pnpm run db:migrate && tsx watch --inspect=0.0.0.0:9229 ./src/apps/api/start.ts\"",
    "start:api:local": "NODE_ENV=local && env-cmd -f src/config/$NODE_ENV.env.json --use-shell \"pnpm run db:migrate && tsx watch --inspect=0.0.0.0:9229  --trace-warnings  ./src/apps/api/start.ts\"",
    "test-out": "env-cmd -f src/config/$NODE_ENV.env.json --use-shell \"echo hello $NODE_ENV\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@databases/pg": "^5.4.1",
    "@databases/pg-typed": "^4.4.1",
    "@fastify/autoload": "^5.7.1",
    "@fastify/jwt": "^7.2.1",
    "@fastify/swagger": "^8.10.1",
    "@fastify/swagger-ui": "^1.9.3",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.15",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.11.4",
    "env-cmd": "^10.1.0",
    "env-schema": "^5.2.0",
    "fastify": "^4.23.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "mongodb": "^6.1.0",
    "resend": "^1.1.0"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@databases/pg-schema-cli": "^4.3.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/chance": "^1.1.4",
    "@types/dockerode": "^3.3.20",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chance": "^1.1.11",
    "dockerode": "^3.3.5",
    "dprint": "^0.40.2",
    "eslint": "^8.49.0",
    "pino-pretty": "^10.2.0",
    "ts-hooks": "0.1.0-rc8",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.32.4",
    "vitest-mock-extended": "^1.2.1"
  }
}
