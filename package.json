{
  "name": "fastify-rest-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "pretest-script": "tsx tests/scripts/pre-test.ts",
    "pretest": "dotenv -e .env.test -- pnpm run pretest-script && dotenv -e .env.test -- pnpm run db:migrate && dotenv -e .env.test -- pnpm run db:schema",
    "test": "dotenv -e .env.test -- vitest run",
    "posttest": "dotenv -e .env.test -- tsx tests/scripts/post-test.ts",
    "db:schema": "npx @databases/pg-schema-cli --directory src/infrastructure/databases/postgres/schema",
    "db:migrate": "npx @databases/pg-migrations apply --directory src/infrastructure/databases/postgres/migrations",
    "start:api": "dotenv pnpm run db:migrate && dotenv tsx watch --inspect=0.0.0.0:9229 ./src/apps/api/start.ts",
    "start:api:local": "dotenv -e .env.local -- pnpm run db:migrate && dotenv -e .env.local -- tsx watch --inspect=0.0.0.0:9229 ./src/apps/api/start.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@databases/pg": "^5.4.1",
    "@databases/pg-typed": "^4.4.1",
    "@fastify/autoload": "^5.7.1",
    "@fastify/jwt": "^7.2.1",
    "@fastify/swagger": "^8.10.1",
    "@fastify/swagger-ui": "^1.9.3",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.17",
    "add": "^2.0.6",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.11.4",
    "dotenv-cli": "^7.3.0",
    "env-cmd": "^10.1.0",
    "env-schema": "^5.2.0",
    "fastify": "^4.23.2",
    "fastify-metrics": "^10.3.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "mongodb": "^6.1.0",
    "pino": "^8.15.1",
    "pnpm": "^8.8.0",
    "resend": "^1.1.0"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@databases/pg-schema-cli": "^4.3.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/chance": "^1.1.4",
    "@types/dockerode": "^3.3.20",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chance": "^1.1.11",
    "dockerode": "^3.3.5",
    "dprint": "^0.41.0",
    "eslint": "^8.50.0",
    "pino-pretty": "^10.2.0",
    "ts-hooks": "0.1.0-rc8",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.5",
    "vitest-mock-extended": "^1.2.1"
  }
}
